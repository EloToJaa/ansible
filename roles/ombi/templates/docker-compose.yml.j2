version: '3'
services:
  request:
    image: lscr.io/linuxserver/ombi:latest
    container_name: ombi
    environment:
      - PUID=${USER_UID}
      - PGID=${USER_GID}
      - TZ={{ timezone }}
    volumes:
      - ombi-config:/config
    restart: unless-stopped
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.ombi.entryPoints: https
      traefik.http.routers.ombi.middlewares: auth@file

networks:
  proxy:
    external: true

volumes:
  ombi-config: