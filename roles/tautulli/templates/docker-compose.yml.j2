version: '3'
services:
  stats:
    image: lscr.io/linuxserver/tautulli:latest
    container_name: tautulli
    environment:
      - PUID=${USER_UID}
      - PGID=${USER_GID}
      - TZ=${TZ}
      - DOCKER_MODS=ghcr.io/gilbn/theme.park:tautulli
    volumes:
      - tautulli:/config
    restart: unless-stopped
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.tautulli.entryPoints: https

networks:
  proxy:
    external: true

volumes:
  tautulli:
    external: true