version: '3'
services:
  redis:
    image: redis:alpine
    container_name: redis
    hostname: redis
    command: redis-server --requirepass {{ var.REDIS_PASSWORD }}
    volumes:
      - redis-data:/data
    ports:
      - 6379:6379
    restart: always
    networks:
      - proxy

networks:
  proxy:
    external: true

volumes:
  redis-data: