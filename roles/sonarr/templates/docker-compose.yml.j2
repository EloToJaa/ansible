version: '3'
services:
  sonarr:
    image: ghcr.io/linuxserver/sonarr:develop
    container_name: sonarr
    environment:
      - PUID=${USER_UID}
      - PGID=${USER_GID}
      - TZ=${TZ}
      - DOCKER_MODS=ghcr.io/gilbn/theme.park:sonarr
    volumes:
      - sonarr:/config
      - ${MEDIA_DIR}/Media:/torrents
    restart: unless-stopped
    networks:
      - proxy
    labels:
      traefik.enable: true
      traefik.http.routers.sonarr.entryPoints: https

networks:
  proxy:
    external: true

volumes:
  sonarr:
    external: true