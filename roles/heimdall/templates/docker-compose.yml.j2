version: '3'
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:latest
    container_name: heimdall
    environment:
      - PUID={{ var.USER_UID }}
      - PGID={{ var.USER_GID }}
      - TZ={{ timezone }}
    volumes:
      - heimdall-config:/config
    networks:
      - proxy

networks:
  proxy:
    external: true

volumes:
  heimdall-config: